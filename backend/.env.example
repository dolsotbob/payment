# ========================
# Database Configuration
# ========================
DATABASE_URL=             # Postgres 연결 문자열 (예: postgres://user:pass@host:5432/dbname)
DB_SSL=                   # DB SSL 사용 여부 (true/false)

# ========================
# Blockchain / Wallet
# ========================
STORE_WALLET=             # 스토어(판매자) 지갑 주소
PRIVATE_KEY=              # 스토어 지갑의 개인키 (민감정보, 절대 노출 금지)
RPC_URL=                  # 블록체인 RPC 엔드포인트 (예: https://kairos.blockpi.network/v1/rpc/...)

# ========================
# Smart Contracts
# ========================
TOKEN_ADDRESS=            # 결제에 사용할 ERC-20 토큰 주소
VAULT_ADDRESS=            # 결제 자금을 보관할 Vault 컨트랙트 주소
PAYMENT_ADDRESS=          # 결제 처리 Payment 컨트랙트 주소

# ========================
# Cashback Settings
# ========================
CASHBACK_THRESHOLD=       # 캐시백 지급 최소 결제 금액 (wei 단위 또는 토큰 단위)
CASHBACK_TOPUP_AMOUNT=    # Vault에 캐시백 토큰 충전 시 사용 금액 (wei 단위)

# ========================
# Auth / JWT
# ========================
JWT_SECRET=               # JWT 서명 시 사용할 비밀 키
JWT_EXPIRES_IN=           # JWT 만료 시간 (예: "1h", "7d")

# ========================
# Coupons (ERC1155)
# ========================
COUPON1155_ADDRESS=       # 쿠폰 ERC1155 컨트랙트 주소
COUPON_DISCOUNT_ENABLED=  # 쿠폰 할인 기능 활성화 여부 (true/false)